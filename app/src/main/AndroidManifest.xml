<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mybottle.ingenicoversion2">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login2Activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DetailReviewJobActivity"
            android:label="Detail Job"
            android:parentActivityName=".ScrollableTabsReviewJobActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ScrollableTabsReviewJobActivity" />
        </activity>
        <activity
            android:name=".RepairingActivity"
            android:label="Repairing"
            android:parentActivityName=".MenuHomeActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuHomeActivity" />
        </activity>
        <activity
            android:name=".ClosingActivity"
            android:label="Closing"
            android:parentActivityName=".RepairingActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RepairingActivity" />
        </activity>
        <activity
            android:name=".ScrollableTabsReviewJobActivity"
            android:label="Review Job"
            android:parentActivityName=".MenuHomeActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuHomeActivity" />
        </activity>
        <activity android:name=".ui.motherboard.MotherboardActivity"
            android:label="Repair Motherboard"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:parentActivityName=".MenuHomeActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuHomeActivity" />
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />

    </application>

</manifest>